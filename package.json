{
  "name": "code-review",
  "displayName": "code review",
  "description": "Have AI review your code using AMBIGUOUS_NAME, EARLY_RETURN and make a COMMENT!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "menus": {
      "editor/context": [
        {
          "when": "!editorHasSelection",
          "command": "extension.YACA:VsCodePlugin",
          "group": "navigation"
        },
        {
          "when": "editorHasSelection",
          "command": "extension.YACA:VsCodePluginSelected",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "true",
          "command": "extension.YACAFileSelected",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.YACA:VsCodePlugin",
        "title": "Code Improvement"
      },
      {
        "command": "extension.YACA:VsCodePluginSelected",
        "title": "Code Improvement Selected"
      },
      {
        "command": "extension.YACAFileSelected",
        "title": "File Selected"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "axios": "^1.4.0"
  }
}
